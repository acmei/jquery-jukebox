<div class="tv">
  <%= image_tag("tv.png", class: 'center') %>
</div>

<%= form_tag search_path(:artist), method: :get, remote: true, class: "form-group" do %>
  <%= label_tag :artist, "Search for:" %>
  <%= text_field_tag :artist, nil, placeholder: "artist name" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<%= button_to("Hot", popular_path, 
  method: :get, class: "inset popular") %>
  <br>
<%= button_to("Rand", random_path, 
  method: :get, class: "inset random") %>

