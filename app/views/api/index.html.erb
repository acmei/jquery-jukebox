<div class="tv">
  <%= image_tag("tv.png") %>
</div>

<%= form_tag search_path(:artist), method: :get, remote: true, class: "search" do %>
  <%= label_tag :artist, "" %>
  <%= text_field_tag :artist, nil, placeholder: "artist name", class: "text-field" %>
  <%= submit_tag "Search", class: "btn btn-default" %>
<% end %>

<%= button_to("Hot", popular_path, 
  method: :get, class: "inset popular") %>
  <br>
<%= button_to("Rand", random_path, 
  method: :get, class: "inset random") %>

