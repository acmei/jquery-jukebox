<%= form_tag search_path(:artist), method: :get, remote: true do %>
  <%= label_tag :artist, "Search for:", class: "form-group" %>
  <%= text_field_tag :artist %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<%= button_to("Popular Jams", popular_path, 
  method: :get, class: "btn btn-primary") %>
<%= button_to("Random Jam", random_path, 
  method: :get, class: "btn btn-primary") %>
